<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnbaStatsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:indeterminate="true" />


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/stats_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_vertical_margin"
                android:text="Top scorers (Boys):"
                android:textSize="20sp" />




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/separator" />

            <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/points_row_constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <TextView
                    android:id="@+id/sr_no"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sr."
                    app:layout_constraintEnd_toStartOf="@+id/player_name"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/player_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    app:layout_constraintEnd_toStartOf="@+id/player_points"
                    app:layout_constraintStart_toEndOf="@+id/sr_no" />

                <TextView
                    android:id="@+id/player_points"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Points"
                    app:layout_constraintEnd_toStartOf="@+id/matches"
                    app:layout_constraintStart_toEndOf="@+id/player_name" />

                <TextView
                    android:id="@+id/matches"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="Matches"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/player_points" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/separator" />

            <!--<TextView-->
            <!--android:id="@+id/stats_b"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/stats_default"-->
            <!--android:textSize="18sp" />-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mvp_boys_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="18dp"
                android:text="Top scorers (Girls)"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_vertical_margin"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/separator" />
            <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/points_row_constraint_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <TextView
                    android:id="@+id/sr_no2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sr."
                    app:layout_constraintEnd_toStartOf="@+id/player_name2"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/player_name2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    app:layout_constraintEnd_toStartOf="@+id/player_points2"
                    app:layout_constraintStart_toEndOf="@+id/sr_no2" />

                <TextView
                    android:id="@+id/player_points2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Points"
                    app:layout_constraintEnd_toStartOf="@+id/matches2"
                    app:layout_constraintStart_toEndOf="@+id/player_name2" />

                <TextView
                    android:id="@+id/matches2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="Matches"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/player_points2" />
            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/separator" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/mvp_girls_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--<TextView-->
            <!--android:id="@+id/stats_g"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/stats_default"-->
            <!--android:textSize="18sp" />-->
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>