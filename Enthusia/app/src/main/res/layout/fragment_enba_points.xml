<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnbaPointsFragment">


    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/points_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Group A"
            android:textSize="18dp" />

        <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp">

            <TextView
                android:id="@+id/sr_no"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sr."
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/team_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Team"
                app:layout_constraintEnd_toStartOf="@+id/p"
                app:layout_constraintStart_toEndOf="@+id/sr_no" />

            <TextView
                android:id="@+id/p"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="P"
                app:layout_constraintEnd_toStartOf="@+id/w"
                app:layout_constraintStart_toEndOf="@+id/team_name" />

            <TextView
                android:id="@+id/w"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="W"
                app:layout_constraintEnd_toStartOf="@+id/l"
                app:layout_constraintStart_toEndOf="@+id/p" />

            <TextView
                android:id="@+id/l"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="L"
                app:layout_constraintEnd_toStartOf="@+id/pf"
                app:layout_constraintStart_toEndOf="@+id/w" />

            <TextView
                android:id="@+id/pf"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PF"
                app:layout_constraintEnd_toStartOf="@+id/pa"
                app:layout_constraintStart_toEndOf="@+id/l" />

            <TextView
                android:id="@+id/pa"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PA"
                app:layout_constraintEnd_toStartOf="@+id/pts"
                app:layout_constraintStart_toEndOf="@+id/pf" />

            <TextView
                android:id="@+id/pts"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pts"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pa" />
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/separator" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/points_card_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Group B"
            android:textSize="18dp" />

        <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp">

            <TextView
                android:id="@+id/sr_no_b"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sr."
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/team_name_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Team"
                app:layout_constraintEnd_toStartOf="@+id/p_b"
                app:layout_constraintStart_toEndOf="@+id/sr_no_b" />

            <TextView
                android:id="@+id/p_b"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="P"
                app:layout_constraintEnd_toStartOf="@+id/w_b"
                app:layout_constraintStart_toEndOf="@+id/team_name_b" />

            <TextView
                android:id="@+id/w_b"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="W"
                app:layout_constraintEnd_toStartOf="@+id/l_b"
                app:layout_constraintStart_toEndOf="@+id/p_b" />

            <TextView
                android:id="@+id/l_b"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="L"
                app:layout_constraintEnd_toStartOf="@+id/pf_b"
                app:layout_constraintStart_toEndOf="@+id/w_b" />

            <TextView
                android:id="@+id/pf_b"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PF"
                app:layout_constraintEnd_toStartOf="@+id/pa_b"
                app:layout_constraintStart_toEndOf="@+id/l_b" />

            <TextView
                android:id="@+id/pa_b"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PA"
                app:layout_constraintEnd_toStartOf="@+id/pts_b"
                app:layout_constraintStart_toEndOf="@+id/pf_b" />

            <TextView
                android:id="@+id/pts_b"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pts"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pa_b" />
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/separator" />



            <android.support.v7.widget.RecyclerView
                android:id="@+id/points_card_list_view_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



    </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>